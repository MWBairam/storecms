@model admin.ViewModels.CMSUsersMgmt.ChangeMyPasswordViewModel

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">



        <form asp-action="ChangeMyPassword" onsubmit="return jQueryAjaxPost(this);">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">#$</div>
                    </div>
                    <input asp-for="CurrentPassword" class="form-control" required maxlength="30" />
                </div>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">#$</div>
                    </div>
                    <input asp-for="NewPassword" class="form-control" required maxlength="30" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <div class="input-group">
                    <div class="input-group-prepend">
                        <div class="input-group-text">#$</div>
                    </div>
                    <input asp-for="ConfirmPassword" class="form-control" required maxlength="30" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>



    </div>
</div>