@model admin.ViewModels.CMSUsersMgmt.AccountProfileViewModel

@{
    Layout = null;
}



<div class="d-flex p-lg-5 ">
    <div class="col-md-12">

        <h6 class="text-left text-danger">-To Delete your Account, Please ask your administrator !</h6>
        <h6 class="text-left text-danger">-To Edit your Roles, Please ask your administrator !</h6>
        <!-- Widget: user widget style 2 -->
        <div class="card card-widget widget-user-2">
            <!-- Add the bg color to the header using any of the bg-* classes -->
            <div class="widget-user-header bg-warning">
                <div class="widget-user-image">
                    <img class="img-circle elevation-2" src="~/DataContent/Images/user_64px.png" alt="User Avatar">
                </div>
                <!-- /.widget-user-image -->
                <h3 class="widget-user-username">@Model.DisplayName</h3>
                <h5 class="widget-user-desc">CMS User</h5>
            </div>
            <div class="card-footer p-0">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link">
                            UserName <span class="float-right  bg-info">@Model.UserName</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            Email<span class="float-right  bg-success">@Model.Email</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">
                            Password <span class="float-right  bg-danger">*********</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <div class="row d-flex p-2 float-right">
                            <!-- Edit --> <!-- we wrote null in the route part because no need to send the user Id or email: new {Email =Model.Email}, becuase we can bring the loggedin user's info in the controller method using anither way-->
                            <a onclick="showInPopup('@Url.Action("EditMyProfile","AccountProfile",null,Context.Request.Scheme)','Edit My Profile')" class="btn btn-light btn-sm ml-1"><i class="fas fa-pencil-alt"></i>&nbsp;Edit My Profile</a>

                            <!-- DisplayMyRoles --> <!-- we wrote null in the route part because no need to send the user Id or email: new {Email =Model.Email}, becuase we can bring the loggedin user's info in the controller method using anither way-->
                            <a onclick="showInPopup('@Url.Action("DisplayMyRoles","AccountProfile",null,Context.Request.Scheme)','Display My Roles')" class="btn btn-light btn-sm ml-1"><i class="fas fa-users-cog"></i>&nbsp;Display My Roles</a>

                            <!--Reset Password--> <!-- we wrote null in the route part because no need to send the user Id or email: new {Email =Model.Email}, becuase we can bring the loggedin user's info in the controller method using anither way-->
                            <a onclick="showInPopup('@Url.Action("ChangeMyPassword","AccountProfile",null,Context.Request.Scheme)','Change My Password')" class="btn btn-light btn-sm ml-1"><i class="fas fa-key"></i>&nbsp;Reset My Password</a>

                        </div>
                    </li>

                </ul>
            </div>
        </div>
        <!-- /.widget-user -->
    </div>
</div>