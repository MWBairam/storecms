@model admin.ViewModels.CMSUsersMgmt.LoginViewModel


@{
    Layout = null;
    //we are not using the _UILayout.cshtml, we designed a new login view here from scratch because we do not want to show side bar before login
}


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&amp;display=fallback">
    <!-- Font Awesome -->
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- icheck bootstrap -->
    <link href="~/lib/AdminLTE/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/lib/AdminLTE/dist/css/adminlte.min.css" rel="stylesheet" />
</head>
<body class="login-page" style="min-height: 466px;">


    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>Store</b>CMS</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>
                <p class="login-box-msg">Devoloped by MHD WALED BAIRAM</p>

                <form method="post">

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="input-group mb-3">
                        <input asp-for="Email" type="email" class="form-control" placeholder="UserName/Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input asp-for="RememberMe" type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>


            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/AdminLTE/dist/js/adminlte.min.js"></script>
    <!----------------------------------------------------------------------------------------------->
    <!-- Those scripts will do immediate validation for the inputs according to the attributes in the Models, e.g: [Requiered]-->
    <!-- So those scripts do clien-side validation without going back to the server method-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        //The library wwwroot/lib/jquery-validation-unobutrusive/jquery.validation.unobutrusive.min.js (which we use for the client-side validation)
        //adds a class called "valid" to the input when it is valid
        //and adds a class called "input-validation-errors" when the input is invalid.
        //we want to use the bootstrsp classes "is-valid" and "is-invalid" instead !
        //we can override the old classes and use our desired classes using :
        var settings = {
            validClass: "is-valid",
            errorClass: "is-invalid"
        };
        $.validator.setDefaults(settings);
        $.validator.unobtrusive.options = settings;
                                            //$(".input-validation-error").toggleClass("input-validation-error is-invalid");
    </script>
    <!----------------------------------------------------------------------------------------------->


</body>
</html>