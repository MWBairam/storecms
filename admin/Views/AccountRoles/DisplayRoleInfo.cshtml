@model admin.ViewModels.CMSUsersMgmt.DisplayRoleInfoViewModel

@{
    ViewBag.Title = "Display Role Info";
    Layout = null;
}

<h6 class="text-danger">Roles are not editable and already hardcoded.</h6>


    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>

        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control"> 
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" disabled class="form-control"> 
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h6>Users in this role</h6>
        </div>
        <div class="card-body">

            <!-- check of there is at least one user existed, if no, display no user associated with this role:-->
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
    </div>


